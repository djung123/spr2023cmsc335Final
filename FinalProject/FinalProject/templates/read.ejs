<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">    
    <title>Home Board</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Handlee&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Handlee', cursive;
            background-color: antiquewhite;
        }

        .main {
            overflow: hidden;
            position: relative;
            width: 900px;
            height: 550px;
            margin: 0 auto 100px;
            background: #fff;
            display: flex;
            justify-content: space-between;
        }

        input, button {
            border: none;
            outline: none;
            background: none;
            font-family: "Handlee", cursive;
        }

        button {
            display: block;
            margin-top: 100%;
            margin: 0 auto;
            width: 260px;
            height: 36px;
            border-radius: 30px;
            background: burlywood;
            color: white;
            font-size: 20px;
            cursor: pointer;
        }

        input {
            display: block;
            width: 100%;
            margin-top: 20px;
            margin-bottom: 20px;
            padding-bottom: 5px;
            font-size: 16px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.4);
            text-align: center;
        }

        h2 {
            width: 100%;
            font-size: 26px;
            text-align: center;
        }

        label {
            display: block;
            width: 260px;
            margin: 25px auto 0;
            text-align: center;
        }
        label span {
            font-size: 12px;
            color: gray;
            text-transform: uppercase;
        }

        .left {
            text-align: center;
            height: 550px;
            width: 100%;
            display:flex;
            flex-direction: column;
            justify-content: space-evenly;
        }

        .right {
            padding-right: 15px;
            background-image: url("https://images.unsplash.com/photo-1631631480669-535cc43f2327?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80");
            background-size: cover;
            background-position: center;
            text-align: center;
            display:flex;
            flex-direction: column;
            justify-content: center;
        }

        /* Burger Menu */
        nav {
            background: #161616;
            color: #fff;
            display: flex;
            justify-content: space-between;
        }

        nav .mainMenu {
            display: flex;
            list-style: none;
        }

        nav .mainMenu li a {
            display: inline-block;
            padding: 15px;
            text-decoration: none;
            text-transform: uppercase;
            color: #fff;
            font-size: 1.5rem;
        }

        nav .mainMenu li a:hover {
            background: antiquewhite;
            color: black;
        }

        nav .openMenu {
            color: white;
            font-size: 2rem;
            margin: 20px;
            display: none;
            cursor: pointer;
        }

        nav .mainMenu .closeMenu, i {
            font-size: 2rem;
            display: none;
            cursor: pointer;
        }

        nav .logo1 {
            margin: 6px;
            font-size: 25px;
            cursor: pointer;
        }

        @media(max-width: 5000px){
            nav .mainMenu{
                height: 100vh;
                position: fixed;
                top: 0;
                right: 0;
                left: 0;
                z-index: 10;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                background: #000;
                transition: top 1s ease;
                display: none;
            }

            nav .mainMenu .closeMenu {
                display: block;
                position: absolute;
                top: 20px;
                right: 20px;
                
            }

            nav .openMenu {
                display: block;
            }

            nav .mainMenu li a:hover {
                background: none;
                color: rgb(255,123,0);
                font-size: 1.6rem;
            }
        }

        .profileInfo {
            width: 200px;
            margin: 0 auto;
            padding: 0.5em;
            border: 1px solid #888;
            border-radius: 5px;
            box-shadow: 5px 5px 5px #0008;
        }
        .profileInfo img {
            width: 100%;
        }
        .profileInfo .name {
            font-size: 2em;
            margin: 0;
            text-align: center;
            color: white;
        }

        .board {
            position: relative;
            height: 100%;
            width: 100%;
        }

        .read-board {
            position: relative;
            height: 100%;
            width: 100%;
        }

        .read-board h2 {
            margin-bottom: 20px;
        }

        .read-board h6 {
            position: relative;
            align-items: right;
        }

        .read-board .read-date {
            position: relative;
            align-items: right;
            margin-bottom: 15px;
        }

        .read-content {
            margin-top: 30px;
            height: 300px;
        }

        pre {
            position: relative;
            height: 100%;
            word-wrap: break-word;
            overflow-y: scroll;
            text-align: left;
        }

        .home {
            display: block;
            margin-top: 30px;
            margin: 0 auto;
            width: 260px;
            height: 36px;
            border-radius: 30px;
            background: burlywood;
            color: white;
            font-size: 20px;
            cursor: pointer;
        }
        
        

    </style>
</head>

<body>
    <nav>
        <div class="logo1"><h1>@MyChannel</h1></div>
        <div class="openMenu"><i class="fa fa-bars"></i></div>
        <ul class="mainMenu">
            <li><a href="/home">@HOME</a></li>
            <% if(!isAuthenticated) { %>
            <li><a href="/login">@LOGIN/JOIN</a></li>
            <% } else { %>
            <li><a href="/write">@WRITE</a></li>
            <li><a href="/logout">@LOGOUT</a></li>
            <% } %>
            <li><a href="/about">@ABOUT</a></li>
            <div class="closeMenu"><i class="fa fa-times"></i></div>
        </ul>
    </nav>

    <div class="main">
        <div class="left">
            <div class="board">
                <% if(!isAuthenticated) { %>
                <h2 style="margin-top: 250px;">This is page is member-only!!</h2><br>
                <button onclick="window.location.href='/login';">@Login/Join</button>
                <% } else { %>
                <div class="read-board">
                    <h2><u><%= post.title %></u></h2>
                    <h5>By: <%= post.writer.charAt(0).toUpperCase() + post.writer.slice(1) %> </h5>
                    <p class="read-date">Written: <%= post.date %></p>
                    <hr>

                    <div class="read-content">
                        <pre><%= post.content %></pre>
                    </div>
                    <hr>
                    <% if(post.writerID === user.name) { %>
                        <a href="/modify?title=<%= post.title %>&id=<%= `${post._id}` %>">@MODIFY</a>
                        <% } %>
                        <% if(page !== null) { %>
                        <a href="/home?page=<%= page %>">@BACK</a>
                        <% } %>
                    <button class="home" onclick="window.location.href=`/home?page=1`;">@HOME</button>
                </div>
                <% } %>
            </div>
        </div>

        <div class="right">
            <% if(!isAuthenticated) { %>
            <h2 style="color:white">Become a member to post!!</h2><br>
            <% } else { %>
                <div class="profileInfo">
                    <img src="<%= user.picture %>" />
                    <p class="name">
                        Welcome, <%= user.nickname.charAt(0).toUpperCase() + user.nickname.slice(1) %>
                    </p>
                </div>
            <% } %>
        </div>
    </div>
    
    <audio autoplay loop id="audio">
        <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3" type="audio/mpeg">
    </audio>

    <script defer>
        function setCookie(c_name,value,exdays)
        {
            var exdate=new Date();
            exdate.setDate(exdate.getDate() + exdays);
            var c_value=escape(value) + 
            ((exdays==null) ? "" : "; expires="+exdate.toUTCString());
            document.cookie=c_name + "=" + c_value;
        }

        function getCookie(c_name)
        {
            var i,x,y,ARRcookies=document.cookie.split(";");
            for (i=0;i<ARRcookies.length;i++)
            {
            x=ARRcookies[i].substr(0,ARRcookies[i].indexOf("="));
            y=ARRcookies[i].substr(ARRcookies[i].indexOf("=")+1);
            x=x.replace(/^\s+|\s+$/g,"");
            if (x==c_name)
                {
                return unescape(y);
                }
            }
        }

        var song = document.getElementsByTagName('audio')[0];
        var played = false;
        var tillPlayed = getCookie('timePlayed');
        function update()
        {
            if(!played){
                if(tillPlayed){
                song.currentTime = tillPlayed;
                song.play();
                played = true;
                }
                else {
                        song.play();
                        played = true;
                }
            }

            else {
            setCookie('timePlayed', song.currentTime);
            }
        }
        setInterval(update,0); 

        const mainMenu = document.querySelector(`.mainMenu`);
        const closeMenu = document.querySelector(`.closeMenu`);
        const openMenu = document.querySelector(`.openMenu`);


        openMenu.addEventListener('click', () => {
            mainMenu.style.display = 'flex';
            mainMenu.style.top = '0';
        });
        closeMenu.addEventListener('click', () => {
            mainMenu.style.top = '-100%';
        });


    </script>
    
</body>
</html>